<div class="main_card">

  <!-- Formulario de ingreso -->
  <img src="../img/logo.svg" alt="logo" class="logo" />
  <h1 class="login_title"> Registro </h1>    

  <form id="registerForm" enctype="multipart/form-data">

    <!-- Email -->
    <div>
      <div class="input_container">
        <input type="text" id="email" name="email" class="form-control" required autocomplete="email" placeholder="Email" oninput="this.value = this.value.toLowerCase()">
      </div>
    </div>
    <!-- Nombre -->
    <div>
      <div class="input_container">
        <input type="text" id="nombre" name="nombre" class="form-control" required autocomplete="nombre" placeholder="Nombre"/>
      </div>
    </div>
    <!-- Contraseña -->
    <div>
      <div class="input_container">
        <input type="password" id="contraseña" name="contraseña" class="form-control" placeholder="contraseña"/>
      </div>
    </div>
    <!-- Contraseña 2 -->
    <div>
      <div class="input_container">
        <input type="password" id="contraseña2" name="contraseña2" class="form-control" required placeholder="Repita la contraseña"/>
      </div>
    </div>
    <!-- Años de experiencia -->
    <div>
      <div class="input_container">
        <input type="number" id="experiencia" name="experiencia" class="form-control" required autocomplete="experiencia" placeholder="Años de experiencia"/>
      </div>
    </div>
    <!-- Especialidad -->
    <div>
      <div class="input_container">
        <select id="especialidad" name="especialidad" class="form-control" required />
            <option value="" disabled selected>Selecciona una especialidad</option>
            <option value="Street">Street</option>
            <option value="Vert">Vert</option>
            <option value="Bowl">Bowl</option>
            <option value="Freestyle">Freestyle</option>
            <option value="Slalom">Slalom</option>
            <option value="Downhill">Downhill</option>
            <option value="Dance">Dance</option>
            <option value="Longboard">Longboard</option>
            <option value="Cruiser">Cruiser</option>
            <option value="Otros">Otros</option>
        </select>
      </div>
    </div>
    <!-- Foto de perfil -->
    <p>Foto de perfil</p>
    <div>
      <div class="input_container">
        <input type="file" id="foto" name="foto" class="form-control" required autocomplete="foto" placeholder="Foto de perfil"/>
      </div>
    </div>
    
    <!-- Boton de ingreso -->
    <button type="submit" class="btn btn-style">Registrarme</button>
    <p id="errorMessage"></p>
  </form>


</div>
