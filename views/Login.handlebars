<div class="main_card">

  <!-- Formulario de ingreso -->
  <img src="../img/logo.svg" alt="logo" class="logo" />
  <h1 class="login_title"> Login </h1>    

  <form id="loginForm">
    <!-- Email -->
    <div class="form_email__container">
      <div class="input_container">
        <input type="text" id="email" name="email" class="form-control" required autocomplete="username" placeholder="Email"/>
      </div>
    </div>
    <!-- Password -->
    <div class="form_pass__container">
      <div class="input_container">
        <input type="password" id="password" name="password" class="form-control" required autocomplete="current-password" placeholder="Contraseña"/>
      </div>
    </div>
    <!-- Boton de ingreso -->
    <button type="submit" class="btn btn-style">Ingresar</button>
    <p id="errorMessage"></p>
    <p>¿Aún no tienes cuenta? <a href="/registro">Regístrate</a></p>
  </form>


</div>
